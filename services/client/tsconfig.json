{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "esModuleInterop": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@server/*": ["../../server/src/*"],
      "@ui/*": ["../../../packages/ui/src/*"],
      "@utilities/*": ["../../../packages/utilities/src/*"]
    },
    "rootDir": "../../"
  },
  "include": [
    "./src",
    "../server/src",
    "../../packages/utilities/src",
    "../../packages/ui/src"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../server" },
    { "path": "../../packages/utilities" },
    { "path": "../../packages/ui" }
  ]
}
